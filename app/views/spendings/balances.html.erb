<div class="container">
  <div class="header-buttons d-flex justify-content-center pb-5">
    <span class="icon-link">
      <%= link_to house_spendings_path(@house) do %>
        <%= inline_svg_tag('menu.svg') %>
      <%end%>
    </span>
    <span class="icon-link" style= "opacity:0.4">
      <%= link_to house_balances_path(@house) do %>
        <%= inline_svg_tag('graph-pie 1.svg') %>
      <%end%>
    </span>
  </div>
  <div class="pb-5">
    <h1>Dépenses de chacun :</h1>
    <%= pie_chart(@spendings_per_tribe.except(:colors), donut: true, colors: @spendings_per_tribe[:colors], suffix: " €", round: 2, zeros: false, discrete: true, thousands: " ") %>
  </div>
  <div>
    <h1>Equilibre des dépenses :</h1>
    <%= bar_chart(@balance_per_tribe.except(:colors), suffix: " €", colors: @balance_per_tribe[:colors], round: 2, zeros: true, discrete: true, thousands: " ", points: false) %>
  </div>
</div>

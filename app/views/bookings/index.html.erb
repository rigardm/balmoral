<h1>Liste des bookings de la house <%= @house.name %></h1>

<ul>
  <% @bookings.each do |booking| %>
    <li>
      <%= render 'shared/booking_preview', booking: booking %>
      <% if policy(booking).edit? %>
        <%=
          link_to "Edit", edit_booking_path(booking)
        %>
      <% end %>
      <% if policy(booking).destroy? %>
        <%=
          link_to "Delete",
            delete_booking_path(booking),
            method: :delete,
            data: { confirm: "Suppression de rÃ©servation: merci de confirmer"}
        %>
      <% end %>
    </li>
  <% end %>
</ul>


<div class="item-preview <%= booking.user.tribe.color %>" data-bs-toggle="modal" data-bs-target="#bookingModal<%= booking.id %>">
  <%= cl_image_tag(booking.user.photo.key, :class => "avatar-bordered #{booking.user.tribe.color}") %>
  <div class="item-data">
    <div class="d-flex">
      <h2><%= current_user == booking.user ? "Vous" : "#{booking.user.first_name}" %></h2>
        <% if booking.pending? %>
          <p><em>- En attente de validation</em></p>
        <% elsif booking.declined? %>
          <p><em>- Refus√©</em></p>
        <% end %>
    </div>
    <p>Du <%= booking.arrival.strftime('%d/%m/%y') %> au <%= booking.departure.strftime('%d/%m/%y') %></p>
  </div>
  <div class="chevron">
  </div>
</div>
<%= render 'shared/booking_details_modal', booking: booking %>
